<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Obliczanie kolorów na rezystorach"
        android:textSize="20sp"
        android:layout_marginLeft="45sp"
        android:layout_marginTop="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="80dp"
        android:text="Kolor 1"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/kolor1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120sp"
        android:layout_marginTop="80dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Kolor 2"
        android:textSize="20sp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="130dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/kolor2"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="130dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mnożnik"
        android:textSize="20sp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="180dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/mnoznik"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="180dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tolerancja"
        android:textSize="20sp"
        android:layout_marginLeft="35sp"
        android:layout_marginTop="230dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tolerancja"
        android:layout_marginLeft="160dp"
        android:layout_marginTop="230dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widok"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="190dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/widok2"
        android:layout_marginTop="320dp"
        android:layout_marginLeft="190dp"/>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        android:layout_marginLeft="160dp"
        android:text="Przelicz"/>

</RelativeLayout>